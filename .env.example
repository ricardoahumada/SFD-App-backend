# Authentication System v2.0 - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
# For production, use RS256 with proper key management
JWT_ALGORITHM=HS256
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# For RS256 (production recommended)
# JWT_PRIVATE_KEY_PATH=./keys/private.pem
# JWT_PUBLIC_KEY_PATH=./keys/public.pem

# JWT Claims Configuration
JWT_ISSUER=auth-system-v2
JWT_AUDIENCE=auth-system-users
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# Clock skew tolerance (seconds)
CLOCK_SKEW_TOLERANCE=300

# Security Configuration
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_ORIGINS=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true

# Key Management
KEYS_PATH=./keys

# Demo Users (In production, these would be in a database)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
CUSTOMER_EMAIL=customer@example.com
CUSTOMER_PASSWORD=customer123

# Cookie Configuration (if using httpOnly cookies)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Session Configuration
MAX_SESSIONS_PER_USER=10
SESSION_CLEANUP_INTERVAL=3600000

# Blacklist Configuration
BLACKLIST_CLEANUP_INTERVAL=3600000
BLACKLIST_MAX_AGE=86400000

# Feature Flags
ENABLE_TOKEN_ROTATION=true
ENABLE_TOKEN_BLACKLISTING=true
ENABLE_TOKEN_INTROSPECTION=true
ENABLE_REFRESH_TOKEN_ROTATION=true

# Development Settings
ENABLE_DEBUG_MODE=true
ENABLE_AUTO_KEY_GENERATION=true