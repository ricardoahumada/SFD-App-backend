# Backend server configuration for Replit - v2.0
run = "npm start"
modules = ["nodejs-20", "web"]

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "node"
publicDir = "../frontend"
build = ["npm", "run", "build"]

[nix]
channel = "stable-21.11"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx,*.mjs}"
syntax = "javascript"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[deployment]
build = ["sh", "-c", "npm install && npm run build"]
run = ["sh", "-c", "npm start"]

[deployment.environment]
NODE_ENV = "production"
PORT = "3000"

[custom]
deployment.userSelection = "backend"
backend = "/backend"